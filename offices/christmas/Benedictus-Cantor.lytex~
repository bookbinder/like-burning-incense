\newcommand\pointup[1]{\leavevmode\vbox{\offinterlineskip
\halign{##\cr\hss\makebox(0,0){\hspace{0pt}\myaccentcolor\myaccentsize\char"00B4}\hss\cr\noalign{\myaccentposition}#1\cr}}}

\newcommand\pointslur[1]{\leavevmode\vbox{\offinterlineskip
\halign{##\cr\hss\makebox(0,0){\hspace{2pt}\pointslurcolor\myaccentsizeslur\char"7E}\hss\cr\noalign{\myaccentpositionTildeA}#1\cr}}}

